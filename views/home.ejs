<link rel="stylesheet" href="<%= assetPath('css/home.css') %>">

<div id="home-container">
    <section id="user-nav">
        <h4>User</h4>
        <% if(locals.user) { %>
            <% if(user.avatar) { %>
                <img src="<%= user.avatar %>" alt="<%= user.name %>" width="100">
            <% } %>
            <p>
                <a href="/users/profile/<%= user.id %>"><%= user.name %></a>
            </p>
        <% } %>
    </section>
    <section id="feed-posts">
        <h4>Posts</h4>
        <% if(locals.user) {%>
        <form action="/posts/create" id="new-post-form" method="POST">
            <textarea name="content" cols="40" rows="4" placeholder="What's on your mind, <%= locals.user.name%>?" required></textarea>
            <input type="submit" value="Post">
        </form>
        <% } %>
    
        <div id="posts-list-container">
            <ul>
                <% for(post of posts) { %>
                <%- include('_post') -%>
                <% } %>
            </ul>
        </div>
    </section>
    
    <section id="user-friends">
        <h4>Friends</h4>
        <% for(u of all_users) { %>
            <p>
                <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
            </p>
        <% } %>
    </section>
    <%- include('_chat_box') -%>
</div>
<script src="<%= assetPath('js/home_post_comments.js') %>"></script>
<script src="<%= assetPath('js/home_post.js') %>"></script>
<script src="<%= assetPath('js/toggle_likes.js') %>"></script>
<script>
    $('.toggle-like-button').each(function(){
        let self = this;
        let toggleLike = new ToggleLike(self);
    });
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.0.1/socket.io.js"></script>
<script src="<%= assetPath('js/toggle_likes.js') %>"></script>
<% if(locals.user) { %>
<script>
    new ChatEngine('user-chat-box', '<%= locals.user._id %>')
</script>
<% } %>